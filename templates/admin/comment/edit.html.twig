{% extends "admin/base.html.twig" %}

{% block title %}
    Edition du commentaire n°{{comment.id}}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>
            Modification du commentaire n°{{comment.id}}
        </h1>
        <div class="alert alert-info">
            <div><strong>Annonce liée :</strong> {{comment.ad.title}}</div>
            <div><strong>Auteur : </strong> {{comment.author.fullName}}</div>
            <div><strong>Date de création :</strong> {{comment.createdAt | date('d/m/Y H:i')}}</div>
            <div><strong>Note donnée :</strong> {{comment.rating}}</div>
        </div>

        {{form_start(form)}}
        {{form_widget(form)}}
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i>
            Enregistrer les modifications
        </button>

        {{form_end(form)}}
    </div>
{% endblock %}