{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations !
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">
			Gestion des réservations
		</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Visiteur</th>
					<th>Annonce</th>
					<th>Actions</th>
                    for
				</tr>
			</thead>
			<tbody>
				{% for booking in bookings %}
					<tr>
						<td>{{booking.id}}</td>
						<td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
						<td>
							<img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro mr-2">
							{{booking.booker.fullName}}
						</td>
						<td>
							{{booking.ad.title}}
						</td>
						<td>
							<a href="{{path('admin_bookings_edit', {'id':booking.id})}}" class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{path('admin_bookings_delete', {'id': booking.id})}}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
